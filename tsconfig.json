{
  "compilerOptions": {
    "target": "es2016",
    "lib": [
      "es2016",
      "dom"
    ],
    "module": "commonjs",
    "baseUrl": "./src",
    "paths": {
      "enum/*": [
        "./enum/*"
      ],
      "com/*": [
        "./com/*"
      ],
      "bo/*": [
        "./bo/*"
      ]
    },
    "declaration": true,
    "sourceMap": true,
    "outDir": "lib",
    "removeComments": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "src/**/*.spec.ts",
    "node_modules"
  ]
}
